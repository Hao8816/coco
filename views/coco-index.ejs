<div class="container">
    <div class="row">
        <div class="col-xs-12" style="background-color: #fff">
            <div class="row blog-nav-bar">
                <div class="col-xs-10 col-sm-10 col-md-4">
                    <a class="item item-active" ng-click="changeOrder(0)">全部</a>
                    <a class="item" ng-click="changeOrder(1)">最热</a>
                    <a class="item" ng-click="changeOrder(2)">最新</a>
                </div>
                <div class="hidden-xs hidden-sm col-md-4">
                    <input ng-model="query" style="border-radius: 15px;width: 280px;margin: auto;text-align: center"
                           class="form-control input-sm" ng-keydown="enterSearchTopic(event)" placeholder="搜索主题"
                           type="text"/>
                </div>
                <div class="col-xs-2 col-md-4">
                    <span class="btn btn-sm btn-default pull-right">
                        <a data-toggle="modal" data-target=".compose_topic_modal"><i class="glyphicon glyphicon-plus"></i>创建分类</a>
                    </span>
                </div>
            </div>
            <div class="row" style="padding-bottom: 10px;padding-top: 10px">
                <div class="col-xs-12 col-sm-6 col-md-4" ng-repeat="topic in topic_list|filter:query | orderBy:order:true">
                    <div class="topic-item">
                        <a class="topic-link" href="#/blog/{{topic.sha1}}">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <h5 style="white-space: nowrap;text-overflow: ellipsis;overflow: hidden">
                                        {{topic.title}}</h5>
                                    <p style="margin:10px 0px;font-size: 12px;text-overflow: ellipsis;overflow: hidden;height: 20px;color: #999">
                                        <span style="color:rgba(0,0,0,0.87)"></span>{{topic.desc}}</p>
                                </div>
                                <div class="col-xs-8">
                                    <img style="width: 30px;height: 30px;border-radius:40px;"
                                         ng-src="/images/{{topic.head_image}}" alt=""/>

                                    <span style="font-size: 12px;color: #666;padding: 2px">{{topic.name}}</span>
                                </div>

                                <div class="col-md-4" style="text-align: right">
                                    <span style="display:inline-block;margin:10px 0px;font-size: 12px;color: rgba(0,0,0,0.56)">博客 ({{topic.related.length}})</span>
                                </div>
                            </div>
                        </a>
                    </div>
                    </div>
                    <div ng-show="next" class="col-xs-12 col-sm-6 col-md-4"
                         style="text-align: center">
                        <div class="topic-item">
                            <a class="topic-link" ng-click="changePage(1)" style="line-height: 102px;cursor: pointer">
                                点击加载更多
                            </a>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<div class="container main-container">
    <div class="modal fade compose_topic_modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">创建主题</h4>
                </div>
                <div class="modal-body" style="height: 220px;">
                    <div class="row">
                        <div class="col-xs-9">
                            <div class="form-group">
                                <label for="exampleInputEmail1">主题</label>
                                <input ng-model="topic.title" type="text" class="form-control" id="exampleInputEmail1"
                                       placeholder="为你的博客写一段标题">
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label for="exampleInputEmail1">分类</label>
                                <select ng-model="topic.type" class="form-control">
                                    <option value="0">科技</option>
                                    <option value="1">编程</option>
                                    <option value="2">设计</option>
                                    <option value="3">创业</option>
                                    <option value="4" selected>其他</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">描述</label>
                        <textarea ng-model="topic.desc" class="form-control" placeholder="主题的描述" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-success btn-sm" ng-click="saveTopic()">创建</button>
                </div>
            </div>
        </div>
    </div>
</div>