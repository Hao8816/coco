<div class="container" ng-controller="topicPageController as mainCtrl">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12" style="margin-top: 20px;">
                    <ol style="margin: 0px;padding: 10px 5px;background-color: transparent" class="breadcrumb">
                        <li><a href="#index/">我的主题</a></li>
                        <!--<li class="active"></li>-->
                    </ol>
                </div>
            </div>
            <div class="blog-nav-bar" style="margin-top: 5px;height:40px;background-color: #fff;border-radius: 3px;border-radius: 5px;">
                <div class="col-xs-7 col-sm-8 col-md-9">
                    <p class="topic-category" style="font-size: 12px;margin-top: 5px;">
                        <a class="item item-active" ng-click="changeOrder(0)">全部主题</a>
                        <a class="item" ng-click="changeOrder(1)">最热主题</a>
                        <a class="item" ng-click="changeOrder(2)">最新主题</a>
                    </p>
                </div>
                <div class="col-xs-5 col-sm-4 col-md-3">
                    <input style="margin: 5px 0px;border-radius: 15px;border-color:#ff7997;" ng-model="query" ng-keydown="enterSearchTopic(event)" class="form-control input-sm" placeholder="搜索主题" type="text">
                        <span class="search-btn" style="display: inline-block;position: absolute;top: 6px;right: 18px;padding: 5px 10px">
                            <i style="color:#ff7997" title="点击搜索" class="glyphicon glyphicon-search"></i>
                        </span>
                </div>
            </div>
            <div class="" style="overflow: auto">
                <!--<div class="col-xs-6 col-sm-4 col-md-4 col-lg-3" ng-repeat="topic in topic_list|filter:query">-->
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3" style="padding:5px;" ng-repeat="topic in topic_list|filter:query | orderBy:order:true">
                    <div class="topic-item">
                        <a class="topic-link" href="#/blog/{{topic.sha1}}">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: left;padding-right: 0px">
                                <img style="width: 30px;height: 30px;border-radius:40px;" ng-src="/images/{{topic.head_image}}" alt=""/>
                                <span style="font-size: 12px;">{{topic.name}}</span>
                                <span style="position:absolute;right:15px;margin:0px;font-size: 12px;color: rgba(0,0,0,0.56)">博客 ({{topic.related.length}})</span>

                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <p style="margin:10px 0px;font-size: 12px;text-overflow: ellipsis;overflow: hidden;height: 72px;color: rgba(0,0,0,0.56)">
                                    <span style="color:rgba(0,0,0,0.87)">{{topic.title}} </span> : {{topic.desc}}</p>
                                <!--<p style="margin:0px;font-size: 12px;color: rgba(0,0,0,0.56);white-space: nowrap;text-overflow: ellipsis;overflow: hidden;height: 20px;">描述</p>-->
                            </div>
                            <div class="col-md-12">
                                <p style="text-align:right;margin:0px;font-size: 12px;color: rgba(0,0,0,0.56)">{{topic.time | date:"yyyy-MM-dd hh:mm"}}</p>
                            </div>
                        </div>
                        </a>
                    </div>
                </div>
                <nav style="margin: auto;text-align: center">
                    <ul class="pagination">
                        <li>
                            <a ng-show="prev" style="cursor: pointer;" ng-click="changePage(-1)" aria-label="Previous">
                                <span aria-hidden="true">上一页</span>
                            </a>
                        </li>
                        <li><a href="#" ng-bind="current_page"></a></li>
                        <li>
                            <a ng-show="next" style="cursor: pointer;" ng-click="changePage(1)" aria-label="Next">
                                <span aria-hidden="true">下一页</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="blog-nav-bar" style="margin-top: 5px;height:40px;background-color: #fff;border-radius: 3px;border-radius: 5px;">
                <div class="col-xs-7 col-sm-8 col-md-9">
                    <p class="topic-category" style="font-size: 12px;margin-top: 5px;">
                        <a class="item item-active" ng-click="changeOrder(0)">博客达人</a>
                        <a class="item" ng-click="changeOrder(1)">社交达人</a>
                        <a class="item" ng-click="changeOrder(2)"></a>
                    </p>
                </div>
                <div class="col-xs-5 col-sm-4 col-md-3">
                </div>
            </div>
        </div>
        <div class="col-md-3" style="margin-top: 20px;">
            <div style="background-color: #fff;border-radius: 5px;height: 200px;padding: 10px 0px;">
                <div style="text-align: center;line-height: 100px;">
                    <img style="height: 80px;width: 80px;border-radius: 80px;" ng-src="/images/{{user.head_image}}" alt=""/>
                </div>
                <p style="text-align: center">
                    <span>主题<a href="" ng-bind="user.nb_topic"></a></span>
                    <span>博客<a href="" ng-bind="user.nb_blog"></a></span>
                    <span>好友<a href="" ng-bind="user.nb_friend"></a></span>
                </p>
                <span style="width: 70%;margin: 0px 15%;" class="btn btn-success">
                    <a style="color: #fff;font-size: 15px;" data-toggle="modal" data-target=".compose_topic_modal">创建主题</a>
                </span>
            </div>
            <div>
                <h5>我关注的人</h5>
                <div style="border-radius: 5px;background-color: #fff;padding: 5px;">
                    <div class="friend-item" style="width: 25%;display: inline-block;text-align: center" ng-repeat="friend in friend_list">
                        <img title="{{friend.name}}" style="width: 60%;margin:0 10%;border-radius: 100%;border: 1px solid #f5f5f5" src="/images/{{friend.head_image}}" alt=""/>
                        <span style="font-size:13px;color:rgba(0,0,0,0.56);display: inline-block;width: 100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;" ng-bind="friend.name"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade compose_topic_modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">创建主题</h4>
                </div>
                <div class="modal-body" style="height: 220px;">
                    <div class="form-group">
                        <label for="exampleInputEmail1">主题</label>
                        <input ng-model="topic.title" type="text" class="form-control" id="exampleInputEmail1" placeholder="为你的博客写一段标题">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">描述</label>
                        <textarea ng-model="topic.desc" class="form-control" placeholder="主题的描述" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-success btn-sm" ng-click="saveTopic()">创建</button>
                </div>
            </div>
        </div>
    </div>
</div>


