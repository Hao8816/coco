<script type="text/javascript">
    function loginCtrl($scope,$http){
        $scope.login = function(){
            var password = sha1($scope.user.password);
            var encrypt_password = sha1(password);
            $scope.user.password = encrypt_password;
            var userInfo = $scope.user;
            loginMain(userInfo)
        }
        $scope.enterLogin = function(e){
            var e = e || window.event
            if (e.keyCode == 13){
                var password = sha1($scope.user.password);
                var encrypt_password = sha1(password);
                $scope.user.password = encrypt_password;
                var userInfo = $scope.user;
                loginMain(userInfo)
            }
        }

        function loginMain(userInfo){
            $scope.error = false
            // 检查用户名
            var username = userInfo.name;
            if (username == "" || userInfo.password == ""){
                $scope.message = "请检查用户名输入格式"
                return
            }

            $http.post('/ajax/login/',userInfo).success(function(data){
                if(data['ret'] == '0001'){
                    $scope.user.name = '';
                    $scope.user.password = '';
                    if (data['user']['head_image'] == ''){
                        data['user']['head_image'] = 'default.jpg'
                    }
                    var loginUserInfo = JSON.stringify(data['user'])
                    sessionStorage.setItem('LOGIN_USER_SHA1',data['user']['sha1']);
                    sessionStorage.setItem('LOGIN_USER_INFO',loginUserInfo);
                    location.href = '/coco/';
                }else if(data['ret'] == '1002'){
                    $scope.error = true
                    $scope.message = "你的账号尚未激活，请到邮箱点击激活链接，完成账号激活"
                }else{
                    $scope.error = true
                    $scope.message = "请检查用户名或者密码"
                }
            });
        }
    }


    // #ad1457
</script>
