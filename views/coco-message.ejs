<style type="text/css">
    .friend_list{
        margin: 0;
        padding: 0;
    }
    .friend_list .item{
        list-style: none;
        padding: 5px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        text-align: center;
    }
    .friend_list .item:hover{
        /*background-color: #fefefe;*/
        /*border-right: 2px solid #ff5277;*/
    }
    #chat-history li{
        list-style: none;
        margin: 8px;
    }
    .friend_list .nav-active{
        background-color: #ddd;
    }

    #chat-history .item .message{
        background-color: #eee;
        position: relative;
        padding:5px 15px;
        border:1px solid #eee;
        border-radius: 3px;
    }
    #chat-history .item .message::before{
        position: absolute;
        content:'';
        border-top: 6px solid transparent;
        border-bottom: 6px solid transparent;
        border-right: 6px solid #dddddd;
        top: 10px;
        left: -6px;
    }
    #send_message_btn{
        display: inline-block;
        width: 100%;
        height: 36px;
        line-height: 22px;
        font-size: 16px;
        border-radius: 0px;
    }
    #chat-tool i{
        margin: 5px 10px;
    }
    .message-item-left,
    .message-item-right{
        clear: both;
        width: 100%;
        position: relative;
        padding: 10px 20px;
        overflow: auto;

    }
    .message-item-left .content{
        text-align: left;
        position: absolute;
        left: 80px;
        top: 10px;;
        background-color: #eee;
        padding: 8px;
        border-radius: 5px;
        max-width: 300px;
        overflow: auto;
        word-break: break-all;
    }
    .message-item-right .content{
        text-align: right;
        position: absolute;
        right: 80px;
        top: 10px;
        background-color: #ddd;
        padding: 8px;
        border-radius: 5px;
        max-width: 300px;
        overflow: auto;
        word-break: break-all;
    }
    .message-item-left .image{
        float: left;
    }
    .message-item-right .image{
        float: right;
    }
    .message-item-left .image,
    .message-item-right .image{
        width: 40px;
        height: 40px;
        border-radius: 40px;
        border: 1px solid #ccc;
    }
    .friend-item{
        background-color: #fff;
        border: 1px solid #eee;
        padding-top: 10px;
        margin:0px;
        position: relative
    }
    .friend-item:hover{
        background-color: #4cae4c;
    }
</style>
<div class="container">

    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9" style="border-radius:5px;">
            <div class="row blog-nav-bar">
                <div class="col-xs-8 col-sm-8 col-md-9">
                    <ol style="margin: 0px;padding:5px;background-color: transparent" class="breadcrumb">
                        <li><a href="#index/">一颗消息</a></li>
                    </ol>
                </div>
            </div>
            <div style="height: 700px"></div>
        </div>
        <div class="hidden-xs hidden-sm col-sm-3 col-md-3">

        </div>
    </div>
</div>
