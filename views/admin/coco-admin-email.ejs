<style type="text/css">
    .message-nav{
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        border: 1px solid #eee;
    }
    .message-nav li{
        padding: 10px;
        margin: 5px 0px;
        list-style: none;
        background-color: #fff;
    }
    .message-nav li a{
        display: inline-block;
        width: 100%;
    }
    .user-nav{
        margin: 0px;
        padding: 0px;
    }
    .user-nav li{
        list-style: none;
        border-bottom: 1px solid #eee;
        padding: 5px 10px;
        cursor: pointer;
    }
    .user-nav li:hover{
        background-color: #f5f5f5;
    }
    .user-nav li p{
        margin: 0px;
    }

</style>

<div class="container" ng-controller="adminEmailCtrl">
    <h4 style="padding: 0px 5px;margin-top: 15px">消息管理</h4>
    <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <ul class="message-nav">
                <li><a href="#message/">实时通知</a></li>
                <li><a href="#email/">邮件提醒</a></li>
                <li><a href="">异常通知</a></li>
                <li><a href="">版本更新</a></li>
            </ul>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
            <div class="row">
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    <div style="min-height: 300px;">
                        <div class="form-group">
                            <label for="exampleInputEmail1">收件人</label>
                            <input ng-model="email.to" type="text" class="form-control ng-pristine ng-valid" id="email_to" placeholder="输入收件人邮箱">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">主题</label>
                            <input ng-model="email.subject" type="text" class="form-control ng-pristine ng-valid" id="exampleInputEmail1" placeholder="邮件主题">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">内容</label>
                            <textarea ng-model = "email.text" class="form-control ng-pristine ng-valid" placeholder="邮件内容" rows="6"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">附件</label>
                            <div class="upload-btn" style="height: 40px;width: 100px;border-radius:2px;cursor:pointer;background-color:#eee;text-align: center;position: relative;font-size: 16px;line-height: 40px;">
                                <span class="upload-title">选择照片</span>
                                <input id="blog_fileupload" type="file" style="width: 100px;height: 40px;margin:0px;opacity: 0;position: absolute;top: 0px;" multiple="">
                            </div>
                            <div id="blog_files_area">
                                <!-- ngRepeat: file in file_list -->
                            </div>
                        </div>
                    </div>
                    <p style="text-align: right"><span class="btn btn-danger" ng-click="sendEmail()">发送邮件</span></p>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    <p style="font-weight: bold">收件人列表</p>
                    <ul class="user-nav" style="max-height: 500px;overflow-y: scroll;background-color: #fff;border: 1px solid #ddd;border-radius: 3px;">
                        <li ng-repeat="user in users" ng-click="selectUser(this)">
                            <p>{{user.name}}</p>
                            <p style="font-size: 13px;color: rgba(0,0,0,0.56)">{{user.email}}</p>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>
