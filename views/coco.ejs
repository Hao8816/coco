            function showTopic(page) {
                var creator_sha1 = sessionStorage.getItem('LOGIN_USER_SHA1');
                var topic_info_cache = localStorage.getItem('TOPIC_INFO_LIST');
                $scope.prev = true;
                $scope.next = true;
