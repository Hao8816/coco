<style type="text/css">
    .blog-nav {
        margin: 0;
        padding: 0;
    }

    .blog-nav li {
        list-style: none;
        /*height: 80px;*/
        margin-top: 5px;
        background-color: #fff;
        /*box-shadow: 0px 0px 5px 1px #ddd;*/
        /*border-radius: 5px;*/
        /*border: 1px solid #eee;*/
        padding: 10px;
        border-left: 4px solid #eee;
    }
    .blog-nav li:hover{
        border-left-color:#ff5277;
    }

    .pagination li a, .pagination a span {
        color: #666;
    }
    .oprate-bar{
        /*padding: 5px;*/
        text-align: right;
        margin: 0;
    }
    .oprate-bar span{
        padding: 0px 20px;
        color: rgba(0,0,0,0.56);
        font-size: 13px;
        cursor: pointer;
    }
    .oprate-bar span:hover{
        text-decoration: underline;
    }
    .blog-nav-bar{
        padding: 0px 5px;

    }
    .blog-nav-bar .nav-item{
        cursor: pointer;
        margin-right: 5px;
        padding: 4px 8px;
        border-radius: 35px;
    }
    .blog-nav-bar .nav-active{
        /*border-bottom: 2px solid #ff7997;*/
        background-color: #ff5277;
        font-weight: bold;
        color: rgba(255,255,255,0.87);
    }
    .blog-nav-bar .nav-item{
        /*color: rgba(0,0,0,0.87);*/
        line-height: 40px;
        font-size: 13px;
    }
    .blog-nav-bar input{
        border-radius: 15px;
        border-color:#ff7997;
    }
    .search-btn{
        cursor: pointer;
        opacity: 1;
    }
    .search-btn:hover {
        opacity: 1;
    }

</style>


<div class="container">
    <div class="row">
        <div class="col-md-9">
            <!--<h4>博客列表</h4>-->
            <div class="row">
                <div class="col-md-12" style="margin-top: 20px;">
                    <ol style="margin: 0px;padding: 10px 5px" class="breadcrumb">
                        <li><a href="#index/">所有主题</a></li>
                        <li class="active">主题:{{topic.title}}</li>
                    </ol>
                </div>
            </div>
            <div class="row blog-nav-bar" style="margin-top: 5px;">
                <div class="col-xs-6 col-sm-5 col-md-4">
                    <span class="nav-item nav-active" ng-click="showAllBlog()">所有博客</span>
                    <span class="nav-item" ng-click="showMyBlog()">我的博客</span>
                </div>
                <div class="col-xs-1 col-sm-3 col-md-5">
                </div>
                <div class="col-xs-5 col-sm-4 col-md-3">
                    <input ng-model="query" style="margin: 5px 0px" class="form-control input-sm" placeholder="搜索博客" type="text"/>
                    <span class="search-btn" style="display: inline-block;position: absolute;top: 6px;right: 18px;padding: 5px 10px">
                        <i style="color:#ff7997" title="点击搜索" class="glyphicon glyphicon-search"></i>
                    </span>
                </div>
            </div>

            <ul class="blog-nav">
                <li ng-repeat="blog in blog_list | filter:query">
                    <div class="row">
                        <div class="col-xs-2 col-sm-2 col-md-1 col-lg-1" style="text-align: center;padding-right: 0px">
                            <img style="width: 40px;height: 40px;border-radius:40px;" ng-src="/images/{{blog.head_image}}" title="{{blog.name}}" alt=""/>
                        </div>
                        <div class="col-xs-7 col-sm-7 col-md-9 col-lg-9">
                            <p style="font-size: 14px">[{{blog.name}}] {{blog.title}}</p>
                        </div>
                        <div class="col-xs-3 col-sm-3 col-md-2 col-lg-2" style="text-align: right">
                            <p style="font-size: 13px;color: rgba(0,0,0,0.56)">{{blog.time | date:"yyyy-MM-dd hh:mm"}}</p>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <p style="margin:0px;font-size: 13px;color: rgba(0,0,0,0.56);">{{blog.content}}</p>

                            <p class="oprate-bar"><span>评论</span><span>转发</span><span>收藏</span></p>
                        </div>
                    </div>
                </li>
            </ul>
            <nav style="margin: auto;text-align: center">
                <ul class="pagination">
                    <li>
                        <a style="cursor: pointer;" ng-click="changePage(-1)" aria-label="Previous">
                            <span aria-hidden="true">上一页</span>
                        </a>
                    </li>
                    <li><a href="#" ng-bind="current_page"></a></li>
                    <li>
                        <a style="cursor: pointer;" ng-click="changePage(1)" aria-label="Next">
                            <span aria-hidden="true">下一页</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-md-3" style="height: 600px;margin-top: 20px;" ng-controller="blogPageCtrl">
            <div style="background-color: #fff;border-radius: 5px;height: 200px;padding: 10px 0px;">
                <div style="text-align: center;line-height: 100px;">
                    <img style="height: 80px;width: 80px;border-radius: 80px;" ng-src="/images/{{user.head_image}}"
                         alt=""/>
                </div>
                <p style="text-align: center">
                    <span>好友<a href="">{{user.nb_friend}}</a></span>
                    <span>主题<a href="">{{user.nb_topic}}</a></span>
                    <span>博客<a href="">{{user.nb_blog}}</a></span>
                </p>
                <span style="width: 70%;margin: 0px 15%;" class="btn btn-danger">
                    <a style="color: #fff;font-size: 15px;" data-toggle="modal"
                       data-target=".compose_blog_modal">发表博客</a>
                </span>
            </div>
            <div>
                <h5>我关注的人</h5>

                <div style="height: 180px;border-radius: 5px;background-color: #fff">

                </div>
                <h5>我关注的主题</h5>

                <div style="height: 180px;border-radius: 5px;background-color: #fff"></div>
            </div>
        </div>
    </div>
    <div class="modal fade compose_blog_modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">写博客</h4>
                </div>
                <div class="modal-body" style="height: 300px;">
                    <div class="form-group">
                        <label for="exampleInputEmail1">标题</label>
                        <input ng-model="blog_title" type="text" class="form-control" id="exampleInputEmail1"
                               placeholder="为你的博客写一段标题">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">内容</label>
                        <textarea ng-model="blog_content" class="form-control" placeholder="博客内容" rows="8"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger btn-sm" ng-click="saveBlog()">发表</button>
                </div>
            </div>
        </div>
    </div>
</div>
