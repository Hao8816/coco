<style type="text/css">

    .info-item span{
        padding: 10px 10px 10px 0px;
        font-size: 18px;

    }
    .info-item span a{
        margin-left: 5px;

    }
    .topic-item{
        background-color: #fff;
        border-radius: 5px;
        border: 1px solid #eee;
        padding: 10px;
        height: 200px;
        margin-top: 5px;

    }
    .blog-nav{
        margin: 0;
        padding: 0;
    }
    .blog-nav li{
        list-style: none;
        /*height: 80px;*/
        margin-top: 5px;
        background-color: #fff;
        /*box-shadow: 0px 0px 5px 1px #ddd;*/
        border-radius: 5px;
        border: 1px solid #eee;
        padding: 10px;
    }
    .upload-btn{
        border-radius: 3px;
        background-color: #eee;
        cursor: pointer;
    }
    .upload-btn:hover{
        background-color: #ddd;
    }
</style>

<div class="container" ng-controller="accountPageCtrl">
    <div class="row">
        <div class="col-md-9">
            <div style="padding:8px;background-color: #fff;margin-top: 20px;border-radius: 5px;">
                <span>个人信息</span>
            </div>
            <div style="border-radius: 5px;margin-top: 5px;background-color: #fff">
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-4" style="text-align: center;height: 260px;line-height: 260px;position: relative">
                        <img id="user_head_image" ng-src="/images/{{user.head_image}}" style="width: 180px;height: 180px;border-radius: 180px;" alt=""/>
                        <a style="position:absolute;color: #000;font-size: 15px;line-height: 180px;left: 42%;top: 17%;cursor: pointer" data-toggle="modal" data-target=".upload_image_modal">换头像</a>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8" style="font-size: 15px;">
                        <div style="padding: 30px;">
                            <h4>{{user.name}}</h4>
                            <p><span>邮箱:</span><span ng-bind="user.email"></span></p>
                            <p><span>手机:</span><span ng-bind="user.phone"></span></p>
                            <p><span>注册时间:</span><span ng-bind="user.time"></span></p>
                            <p class="info-item">
                                <span>主题<a href="" ng-bind="user.nb_topic"></a></span>
                                <span>博客<a href="" ng-bind="user.nb_blog"></a></span>
                                <span>好友<a href="" ng-bind="user.nb_friend"></a></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div style="padding:8px;background-color: #fff;margin-top: 20px;border-radius: 5px;clear: both;width: 100%">
                <span>详细信息</span>
            </div>
            <div style="border-radius: 5px;height: 400px;background-color: #fff;margin-top: 5px">
                <div class="row">
                </div>
            </div>
        </div>
        <div class="col-md-3" style="margin-top: 20px;">
            <div style="background-color: #fff;border-radius: 5px;padding: 10px;">
                <p>当前位置：<a ng-bind="infos.location">北京</a></p>
                <p>{{infos.date | date:"yyyy-MM-dd hh:mma"}}</p>
                <p>天气</p>
                <div style="text-align: center">
                    <img src="/images/weather/cloud.png" alt=""/>
                </div>
                <p>多云转阴</p>

                <div style="margin-top: 15px;border-top: 1px solid #ddd;padding: 10px;">
                    <p>当前登录账号: <a href="" ng-bind="infos.name"></a></p>
                    <p>登录IP: <a href="" ng-bind="infos.ip"></a></p>
                <span style="width: 70%;margin: 10px 15%;" class="btn btn-danger">
                    <a style="color: #fff;font-size: 15px;" href="/coco/logout/">切换账号</a>
                </span>
                </div>
            </div>
        </div>
    </div>
</div>

