<style type="text/css">

    .info-item span{
        padding: 10px 10px 10px 0px;
        font-size: 18px;

    }
    .info-item span a{
        margin-left: 5px;

    }
    .topic-item{
        background-color: #fff;
        border-radius: 5px;
        border: 1px solid #eee;
        padding: 10px;
        height: 200px;
        margin-top: 5px;

    }
    .blog-nav{
        margin: 0;
        padding: 0;
    }
    .blog-nav li{
        list-style: none;
        /*height: 80px;*/
        margin-top: 5px;
        background-color: #fff;
        /*box-shadow: 0px 0px 5px 1px #ddd;*/
        border-radius: 5px;
        border: 1px solid #eee;
        padding: 10px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div style="padding:8px;background-color: #fff;margin-top: 20px;border-radius: 5px;">
                <span>个人信息</span>
            </div>
            <div style="border-radius: 5px;margin-top: 5px;background-color: #fff" ng-controller="accountPageCtrl">
                <div class="row">
                    <div class="col-md-4" style="text-align: center;height: 260px;line-height: 260px;">
                        <img src="/images/head_image1.jpg" style="width: 180px;height: 180px;border-radius: 180px;" alt=""/>
                    </div>
                    <div class="col-md-8" style="padding:30px 0px;font-size: 15px;">
                        <h4>{{user.name}}</h4>
                        <p><span>邮箱:</span>{{user.email}}</p>
                        <p><span>手机:</span>{{user.phone}}</p>
                        <p><span>注册时间:</span>{{user.time}}</p>
                        <p class="info-item">
                            <span>好友<a href="">{{user.nb_friend}}</a></span>
                            <span>主题<a href="">{{user.nb_topic}}</a></span>
                            <span>博客<a href="">{{user.nb_blog}}</a></span>
                        </p>
                    </div>
                </div>
            </div>
            <div style="padding:8px;background-color: #fff;margin-top: 20px;border-radius: 5px;clear: both;width: 100%">
                <span>我的主题</span>
            </div>
            <div style="border-radius: 5px;" ng-controller="showTopic">
                <div class="row">
                    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3" ng-repeat="topic in topic_list">
                        <div class="topic-item">
                            <p style="font-size: 13px;text-align: center;color: rgba(0,0,0,0.56)">{{topic.time}}</p>
                            <h4 style="text-align: center;line-height: 100px;border-bottom: 1px solid #eee">{{topic.title}}</h4>
                            <p style="margin: 0px;font-size: 13px;color: rgba(0,0,0,0.87)">{{topic.desc}}</p>

                        </div>
                    </div>
                </div>
            </div>
            <div style="padding:8px;background-color: #fff;margin-top: 20px;border-radius: 5px;clear: both;width: 100%">
                <span>我的博客</span>
            </div>
            <div style="border-radius: 5px;" ng-controller="showBlog">
                <ul class="blog-nav">
                    <li ng-repeat="blog in blog_list">
                        <img src="/images/head_image{{blog.id}}.jpg" style="width:50px;height: 50px;border-radius: 50px;padding: 5px;" alt=""/>
                        <span>{{blog.title}}</span>
                        <span style="float: right;font-size: 13px;color: rgba(0,0,0,0.4)">{{blog.time}}</span>
                        <p style="padding-left: 50px;color: rgba(0,0,0,0.56);font-size: 13px;">{{blog.content}}</p>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-3" style="height: 600px;margin-top: 20px;" ng-controller="blogPageCtrl">
            <div style="background-color: #fff;border-radius: 5px;height: 200px;padding: 10px 0px;">


            </div>
        </div>
    </div>
</div>